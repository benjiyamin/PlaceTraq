<div class="container">
  <div class="row justify-content-center my-4">
    <div class="col-12">
      <div class="card card-sm">
        <div class="card-body row no-gutters align-items-center">
          <div class="col-auto">
            <i class="fas fa-search h4 text-body mt-2"></i>
          </div>
          <!--end of col-->
          <div class="col mx-3">
            <input class="form-control form-control-borderless mr-sm-2" type="search"
              placeholder="Search projects by location or keyword" id="searchInput" {{#if search}} value="{{search}}"
              {{/if}}>
          </div>
          <!--end of col-->
          <div class="col-auto">
            <button class="btn btn-outline-success my-2 my-sm-0" id="searchBtn">Search</button>
          </div>
          <!--end of col-->
        </div>
      </div>
    </div>
    <!--end of col-->
  </div>
  <div class="row">
    {{#each projects}}
    <div class="col-12 col-sm-6 col-lg-4">
      {{> project/project-block}}
    </div>
    {{/each}}
  </div>
</div>

{{#section 'js'}}
<script src="/js/jquery-cursor-end.js"></script>
<script src="/js/search.js"></script>
<script>
  $(document).ready(function () {
    $('#searchInput').focus().putCursorAtEnd()
  })
</script>
{{/section}}