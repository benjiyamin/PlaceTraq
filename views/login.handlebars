<div class="container mt-4">

  <div class="row">
    <div class="col-lg-6 offset-lg-3">

      <form action="/{{#if signUp}}signup{{else}}login{{/if}}" method="POST">
        <h2>{{#if signUp}}Sign Up{{else}}Log In{{/if}}</h2>
        {{#if signUp}}<p>Please fill in this form to create an account!{{else}}Welcome back!{{/if}}</p>
        <hr>
        {{#if signUp}}
        <div class=" form-group form-row">
          <div class="col">
            <input type="text" class="form-control" name="first_name" placeholder="First name">
          </div>
          <div class="col">
            <input type="text" class="form-control" name="last_name" placeholder="Last name">
          </div>
        </div>
        {{/if}}
        <div class="form-group">
          <input type="email" class="form-control" name="email" placeholder="Email" required="required">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="password" placeholder="Password" required="required">
        </div>
        {{#if signUp}}
        <div class="form-group">
          <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password"
            required="required">
        </div>
        <div class="form-group">
          <label class="checkbox-inline"><input type="checkbox" required="required"> I accept the <a href="#">Terms of
              Use</a> &amp; <a href="#">Privacy Policy</a></label>
        </div>
        {{/if}}
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg">{{#if signUp}}Sign Up{{else}}Login{{/if}}</button>
        </div>
      </form>
      {{#if signUp}}
      <div class="hint-text">Already have an account? <a href="/login">Log In here</a></div>
      {{else}}
      <div class="hint-text">Don't have an account? <a href="/signup">Sign Up here</a></div>
      {{/if}}


    </div>
  </div>
</div>