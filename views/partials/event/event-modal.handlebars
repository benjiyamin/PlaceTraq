<!-- Modal -->
<div class="modal fade" id="eventModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventModalLabel">Edit Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-4">
              <!-- Nav tabs -->
              <ul class="nav nav-pills flex-column mb-4" id="myTab" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" id="event-info-tab" data-toggle="tab" href="#event-info"
                    role="tab">Info</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="event-about-tab" data-toggle="tab" href="#event-about" role="tab">About</a>
                </li>
              </ul>
            </div>
            <div class="col-8">
              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active" id="event-info" role="tabpanel">
                  <div id="form-container" class="container">
                    <form>
                      <div class="form-group row">
                        <label for="eventNameInput">Event Name</label>
                        <input type="text" class="form-control" id="eventNameInput" placeholder="Enter text">
                      </div>
                      <div class="form-group row">
                        <label for="eventDescriptionTextarea">Description</label>
                        <textarea class="form-control" id="eventDescriptionTextarea" rows="4"></textarea>
                      </div>
                      <div class="form-group row">
                        <label for="eventStartInput">Date</label>
                        <input type="date" class="form-control" id="eventStartInput" placeholder="Enter date"
                          value="{{date 'now' 'YYYY-MM-DD'}}">
                      </div>
                    </form>
                  </div>
                </div>

                <div class="tab-pane" id="event-about" role="tabpanel">
                  <div class="modal-editor" id="eventEditor"></div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveEventBtn">Save changes</button>
      </div>
    </div>
  </div>
</div>