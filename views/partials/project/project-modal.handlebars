<!-- Modal -->
<div class="modal fade" id="projectModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Page</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <div class="modal-body">
          <div id="form-container" class="container">
            <form>
              <div class="form-group row">
                <label for="nameInput" class="col-lg-2 col-form-label">Project Name</label>
                <div class="col-lg-10">
                  <input type="text" class="form-control" id="nameInput" placeholder="Enter text" value="{{project.name}}">
                </div>
              </div>
              <div class="form-group row">
                <label for="descriptionTextarea" class="col-lg-2 col-form-label">Description</label>
                <div class="col-lg-10">
                  <textarea class="form-control" id="descriptionTextarea" rows="3">{{project.description}}</textarea>
                </div>
              </div>
              <div class="form-group row">
                <label for="nameInput" class="col-lg-2 col-form-label">Location</label>
                <div class="col-lg-10">
                  <input type="text" class="form-control" id="locationInput" placeholder="Enter text" value="{{project.location}}">
                </div>
              </div>
              <div class="form-group row">
                <label for="startInput" class="col-lg-2 col-form-label">Start Date</label>
                <div class="col-lg-10">
                  <input type="date" class="form-control" id="startInput" placeholder="Enter date" value="{{formatDate project.start 'YYYY-MM-DD'}}">
                </div>
              </div>
              <div class="form-group row">
                <label for="endInput" class="col-lg-2 col-form-label">End Date</label>
                <div class="col-lg-10">
                  <input type="date" class="form-control" id="endInput" placeholder="Enter date" value="{{formatDate project.end 'YYYY-MM-DD'}}">
                </div>
              </div>
            </form>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveProjectBtn">Save changes</button>
      </div>
    </div>
  </div>
</div>