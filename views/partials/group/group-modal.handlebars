<!-- Modal -->
<div class="modal fade" id="groupModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="groupModalLabel">Edit Group</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <div class="modal-body">
          <div id="form-container" class="container">
            <form>
              <div class="form-group row">
                <label for="nameInput" class="col-lg-2 col-form-label">Group Name</label>
                <div class="col-lg-10">
                  <input type="text" class="form-control" id="groupNameInput" placeholder="Enter text" value="{{group.name}}">
                </div>
              </div>
              <div class="form-group row">
                <label for="descriptionTextarea" class="col-lg-2 col-form-label">Description</label>
                <div class="col-lg-10">
                  <textarea class="form-control" id="groupDescriptionTextarea" rows="3">{{group.description}}</textarea>
                </div>
              </div>
            </form>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveGroupBtn" data-group-id="{{group.id}}">Save changes</button>
      </div>
    </div>
  </div>
</div>