<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h1 class="display-4">{{group.name}}</h1>
      <h4 class="jumbotron p-2 text-center">Members</h4>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          {{#each group.Members}}
          {{> member/member-block}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>