{{#section 'css'}}
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
  integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
  crossorigin="" />
<link rel="stylesheet" href="/css/project.css">
{{#if (userIsMemberOfGroup request.user project.Group)}}
<!-- Include stylesheet -->
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
{{/if}}
{{/section}}

<div class="w-100" id="map" style="height:33vh"></div>

<div class="container">

  <div class="row">
    <div class="col-md-4">
      <div class="sticky-top pt-4" style="top: 56px;">
        {{#if (userIsMemberOfGroup request.user project.Group)}}
        <div class="row jumbotron p-2 m-0 text-center">
          <button class="col btn btn-link p-0 m-0 text-decoration-none" data-toggle="modal" data-target="#projectModal"
            type="button">
            <i class="fas fa-edit"></i> Edit Page
          </button>
          <button class="col btn btn-link p-0 m-0 text-decoration-none" data-toggle="modal" data-target="#eventModal"
            type="button" id="addEventBtn">
            <i class="fas fa-plus"></i> Add Event
          </button>
        </div>
        {{/if}}
        <div>
          <h1 class="display-4">{{project.name}}</h1>
        </div>
        <div>
          <p class="lead">
            {{project.description}}
          </p>
        </div>
        <div>
          <p class="text-muted"><i class="fa fa-map-marker-alt"></i> {{project.location}}</p>
          <p class="text-muted"><i class="fas fa-calendar-alt"></i> {{date project.start 'MMMM YYYY'}} -
            {{date project.end 'MMMM YYYY'}}</p>
          <p class="text-muted"><i class="fas fa-users"></i> {{length project.Users}}
            Follower{{#unless (equalsLength project.Users 1)}}s{{/unless}}</p>
          {{#if (isAuthenticated request)}}
          <button id="followBtn" type="button"
            class="btn btn-primary btn-lg btn-block{{#if (userFollowsProject request.user project)}} active{{/if}}"
            {{#if (userFollowsProject request.user project)}}data-followed{{/if}}>
            {{#if (userFollowsProject request.user project)}}
            <i class="fas fa-user-minus"></i> Unfollow this Project
            {{else}}
            <i class="fas fa-user-plus"></i> Follow this Project
            {{/if}}
          </button>
          {{else}}
          <a class="btn btn-primary btn-lg btn-block" href="/login?redirect={{request.url}}"><i
              class="fas fa-user-plus"></i> Login
            to Follow</a>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="col-md-8">

      <!-- Nav tabs -->
      <ul class="nav nav-pills py-4 sticky-top bg-white" style="top: 56px;" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="timeline-tab" data-toggle="tab" href="#timeline" role="tab">Timeline</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="about-tab" data-toggle="tab" href="#about" role="tab">About</a>
        </li>
        <!--<li class="nav-item">
          <a class="nav-link" id="posts-tab" data-toggle="tab" href="#posts" role="tab">Posts</a>
        </li>-->
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="timeline" role="tabpanel">
          <div class="container">
            <div class="row">
              <div class="col">
                <ul class="timeline">
                  <li>
                    <h4 class="jumbotron p-2 text-center">Project End - {{date project.end 'MMMM YYYY'}}</h4>
                  </li>
                  {{#each futureEvents}}
                  {{> event/event-block}}
                  {{/each}}
                  <li>
                    <h4 class="jumbotron p-2 text-center">Today - {{date 'now' 'MMMM DD, YYYY'}}</h4>
                  </li>
                  {{#each pastEvents}}
                  {{> event/event-block}}
                  {{/each}}
                  <li>
                    <h4 class="jumbotron p-2 text-center">
                      Project Start - {{date project.start 'MMMM YYYY'}}
                    </h4>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="about" role="tabpanel">
          {{{aboutHtml}}}
        </div>
        <!--<div class="tab-pane" id="posts" role="tabpanel">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Ben Miller <small>mail@benkmiller.com â€¢ Jun 18</small></h5>
              <p class="card-text">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Unde ipsa aperiam odio
                minima, deleniti natus similique impedit adipisci itaque, sit quo, eligendi illum nobis. Veritatis, modi
                cum! Officia, similique. Sed?.</p>
              <div class="card-text">
                <a href="#">Reply</a>
              </div>
            </div>
          </div>
        </div>-->
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>

